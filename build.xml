<project name="onSpec">

	<property name="build.dir" location="./build"/>

	<property environment="env"/>
	<import file="${env.APAMA_HOME}/etc/apama-macros.xml"/>

	<target name="init">
		<mkdir dir="${build.dir}"/>
	</target>

	<target name="package" depends="init">
		<engine-package output="${build.dir}/${ant.project.name}.cdp" manifest="manifest.txt"/>
	</target>

	<target name="clean">
		<delete>
			<fileset dir="${build.dir}" includes="**/*.cdp"/>
		</delete>
	</target>
</project>
